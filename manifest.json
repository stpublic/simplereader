{
  "manifest_version": 3,
  "name": "SimpleReader - OpenAI TTS",
  "version": "1.0",
  "description": "A simple extension to read web page content aloud using OpenAI's Text-to-Speech API",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_icon": {
      "16": "assets/icon-16.png",
      "48": "assets/icon-48.png",
      "128": "assets/icon-128.png"
    }
  },
  "background": {
    "service_worker": "scripts/background.js"
  },
  "options_page": "pages/options.html",
  "icons": {
    "16": "assets/icon-16.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  }
} 